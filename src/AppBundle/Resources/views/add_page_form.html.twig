{% if url is not defined %}
    {% set url = '' %}
{% endif %}

{% if redirectBack is not defined %}
    {% set redirectBack = 0 %}
{% endif %}

<form class="navbar-form navbar-left" role="search" action="{{ path('add_wiki_page', {'redirectBack': redirectBack}) }}" method="POST">
    <div class="form-group">
        <input type="text" name="page_url" class="form-control" value="{{ url }}"  placeholder="Url" style="width: 300px">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>